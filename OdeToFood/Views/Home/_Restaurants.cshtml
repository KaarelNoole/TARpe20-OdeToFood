@model IPagedList<RestaurantListViewModel>
    <div id="restaurantList">
        <div class="pagedList" data-otf-targe="#restaurantList">
            @Html.PagedListPager(Model, page => Url.Action("Index", new 
        { page }),PagedListRenderOptions.MinimalWithItemCountText) 
        </div>
        @foreach (var item in Model)
        {
            <div>
                <h4>@item.Name</h4>
                <div>@item.City, @item.Country</div>
                <div>Number of Reviews: @item.CountOfReviews</div>
                <hr />
            </div>
        }
    </div>